<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Top gradient part -->
    <item android:bottom="200dp"> <!-- Adjust this value based on your layout size -->
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#57437B"
                android:centerColor="#943862"
                android:endColor="#922034"
                android:angle="270"/>
        </shape>
    </item>

    <!-- Bottom white rounded rectangle part -->
    <item android:top="210dp"> <!-- Adjust this value based on your layout size -->
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <corners
                android:topLeftRadius="50dp"
                android:topRightRadius="50dp"
                /> <!-- Adjust corner radius as needed -->
        </shape>
    </item>
</layer-list>
